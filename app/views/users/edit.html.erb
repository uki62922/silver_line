<div class="new-top">
  <h2 class="title">
  アカウント編集
  </h2>
</div>
<div class="form">
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :名前%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :メールアドレス%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "完了", class: 'btn'%>
        </div>
        <div class="new-link">
          <br>
          <button><%= link_to "戻る", root_path, class: 'link'%></button>
          <br>
          <br><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'link'%>
        </div>
      <% end %>
</div>